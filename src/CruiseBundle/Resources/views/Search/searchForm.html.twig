
<form action="{{path('search')}}" method="get">

<div class="row">
	<div class="col-sm-3">
		<label class="control-label required" for="startDate">Дата отправления от</label>
		
		<input type="date" id="startDate" name="startDate" required="required" class="form-control" value="{{form.startDate  | date('Y-m-d')}}">
	</div>		
	<div class="col-sm-3">
		<label class="control-label required" for="endDate">Дата прибытия по</label>
		
		<input type="date" id="endDate" name="endDate" required="required" class="form-control" value="{{form.endDate | date('Y-m-d')}}">
	</div>			
	<div class="col-sm-3">
		<label class="control-label" for="ship">Теплоход</label>
		
		<select id="ship" name="ship" class="form-control">
		
		<option value="">Все теплоходы</option>
		
		{% for ship in form.ships %}
		<option value="{{ship.id}}" {% if ship.selected is defined %} selected {% endif %} >{{ship.name}}</option>
		{% endfor %}
		
		</select>
	</div>				
	<div class="col-sm-3">
		<label class="control-label required" for="placeStart">Город отправления</label>
		
		<select id="placeStart" name="placeStart" class="form-control">
		<option value="all">Все города</option>
		{% for placeStart in form.placesStart %}
		<option value="{{placeStart.name}}" {% if placeStart.selected %} selected {% endif %}>{{placeStart.name}}</option>
		{% endfor %}
		</select>
	</div>
</div>
<div class="row">

	<div class="col-sm-9">
		<div class="row">
			
			<div class="col-sm-4">
				{#<div class="checkbox">
					<label><input type="checkbox" id="burningCruise" name="burningCruise" > «Счастливый» круиз</label>
				</div>					
				<div class="checkbox">
					<label><input type="checkbox" id="specialoffer" name="specialoffer"> Специальный тариф</label>
				</div>	
				<br>#}
			</div>		
	
			<div class="col-sm-4" style="padding:20px 15px 0 15px">
			
				<label class="control-label required" for="form_days">Продолжительность</label>
				
				<input type="text" id="days" name="days" required="required" data-slider-min="{{form.minDays}}" data-slider-max="{{form.maxDays}}" data-slider-value="[{{form.days}}]" value="{{form.days}}"  class="form-control">		 
			</div>
			
			<div class="col-sm-4" style="padding:20px 15px 0 15px">
			
			<a href="#spoiler-1" class="btn btn-default spoiler collapsed" data-toggle="collapse" aria-expanded="false">Города на маршруте</a>	
			</div>			
			
			
			<div class="col-sm-12">
				<div class="collapse" id="spoiler-1" aria-expanded="false" style="height: 0px;">
					<div class="well">					
						<div id="places" class="clearfix">
							
						{% for place in form.places %}	
							<div class="checkbox">
								<label class=""><input type="checkbox" id="places_{{place.id}}" name="places[]" value="{{place.id}}" {% if place.checked is defined %} checked {% endif %}> {{place.name}}</label>
							</div>
						{% endfor %}	

	
						</div>			
					</div>
				</div>	
			</div>		
			
			
		</div>	
	</div>	
	
	<div class="col-sm-3" style="padding:0px 15px  0 15px;">
		<button type="submit" id="form_button" name="form[button]" class="btn-default btn" onclick="yaCounter46630143.reachGoal('searchcruiz'); return true;">Поиск</button>	
		
	</div>	


	

</div>




	
</form>
